{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "wemaintain/slack/(.*)": "<rootDir>/../libs/slack/src/$1",
    "wemaintain/slack": "<rootDir>/../libs/slack/src"
  }
}